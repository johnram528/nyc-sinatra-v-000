<h1>Edit Figure</h1>
<form method="POST" action="/figures/<%=@figure.id%>">
  <input type="hidden" name="_method" value="patch">
  Figure Name:<input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br>
  Titles:<br>
  <%Title.all.each do |title|%>
  <input type="checkbox" name="figure[title_ids][]" id="<%="title_#{title.id}"%>" value="<%=title.id%>"<%= "checked" if @figure.titles.include?(title)%>><%=title.name%></input><br>
  <%end%>
  <label>Create New title:</label><input type="text" name="title[name]" id="new_title"><br><br>
  Landmarks:<br>
  <%Landmark.all.each do |landmark|%>
  <input type="checkbox" name="figure[landmark_ids][]" id="<%="landmark_#{landmark.id}"%>" <%= "checked" if @figure.landmarks.include?(landmark)%> value="<%=landmark.id%>"><%=landmark.name%><br>
  <%end%>
  <label>Create New Landmark:</label><input type="text" name="landmark[name]" id="new_landmark"><br>
  <input type="submit" value="Edit Figure" name="Edit Figure">
</form>


