<form method="POST" action="/figures">
  Figure Name: <input type="text" name="figure[name]" id="figure_name"><br><br>
  Titles:<br>
  <%Title.all.each do |title|%>
  <input type="checkbox" name="figure[title_ids][]" id="<%="title_#{title.id}"%>" value="<%=title.id%>"><%=title.name%><br>
  <%end%>
  <label>Create New title:</label><input type="text" name="title[name]" id="new_title"><br><br>
  Landmarks:<br>
  <%Landmark.all.each do |landmark|%>
  <input type="checkbox" name="figure[landmark_ids][]" id="<%="landmark_#{landmark.id}"%>" value="<%=landmark.id%>"><%=landmark.name%><br>
  <%end%>
  <label>Create New Landmark:</label><input type="text" name="landmark[name]" id="new_landmark"><br>
  <input type="submit" value="Create New Figure" name="Create New Figure">
</form>



